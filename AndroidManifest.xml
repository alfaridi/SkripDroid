<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="info.alfaridi.skripdroid" android:versionCode="1"
	android:versionName="1.0">
	<uses-sdk android:minSdkVersion="8" />
	<uses-permission android:name="android.permission.INTERNET" />

	<application android:name=".CatalogApplication"
		android:theme="@style/Theme.Alfaridi" android:icon="@drawable/icon"
		android:label="@string/app_name">
		<activity android:name=".SkripDroidActivity" android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>

		<activity android:name=".InfoTabActivity" android:label="@string/app_name" />
		<activity android:name=".facebook.FacebookActivity"
			android:label="@string/app_name" />
		<activity android:name=".twitter.TwitterActivity"
			android:label="@string/app_name" />

	</application>
</manifest>